<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="pl-3">
        <!--user info, new book-->
      <%= render 'users/info', user: @book.user %>     
      <%= render 'form', book_new: @book_new %>     
      </div>
    </div>
      
    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>
        <table class="w-100">
          <tbody>
            <tr class="border-top">
              <td class="pt-3"><%= link_to user_path(@book.user.id) do %><%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= @book.user.name %><% end %></td>
              <td class="align-top pt-3"><%= link_to @book.title, book_path(@book.id) %></td>
              <td class="align-top pt-3"><%= @book.body %></td>
           <% if @book.user == current_user %>
              <td class="align-top pt-3"><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-success' %></td>
              <td class="align-top pt-3"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class:'btn btn-danger' %></td>
              <% end %>
            </tr>
         </tbody>
        </table>
      </div>
  </div>
</div>