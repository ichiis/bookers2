<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="pl-3">
        <h2>User info</h2>
           <%= image_tag @user.get_profile_image(120, 120) %>

           <table class="w-100 mb-5">
             <thead>
                <tr class="border-top">
                  <th class="p-3">name</th>
                  <th><%= @user.name %></th>
                </tr>
               <tr class="border-top">
                 <th class="p-3">intruduction</th>
                 <th><%= @user.introduction %></th>
               </tr>
            </thead>
          </table>
          <%= link_to edit_user_path(current_user.id), class:'btn btn-outline-secondary btn-block' do %><i class="fa-solid fa-user-gear"></i><% end %>
          
      <div class="mt-3">
        <h3>New book</h3>
          <%= form_with model: @book_new do |f| %>
          <p class="m-0">Title</p>
          <%= f.text_field :title, class:'w-100' %>
          <p class="mt-3 mb-0">Opinion</p>
          <%= f.text_area :body, class:'w-100' %><br>
          <%= f.submit 'Create Book', class:'btn btn-success my-2' %>
          <% end %>
      </div>
      </div>
    </div>
      
      <div class="col-md-8 offset-md-1">
        <h3>Book detail</h3>
        <table class="w-100">
          <tbody>
            <tr class="border-top">
              <td class="pt-3"><%= link_to user_path(@user.id) do %><%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= @user.name %><% end %></td>
              <td class="align-top pt-3"><%= link_to @book.title, book_path(@book.id) %></td>
              <td class="align-top pt-3"><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td class="align-top pt-3"><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-success' %></td>
                <td class="align-top pt-3"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class:'btn btn-danger' %></td>
              <% end %>
            </tr>
         </tbody>
        </table>
      </div>
      
  </div>
</div>