<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>
  <%= link_to edit_user_path(current_user.id) do %><i class="fa-solid fa-user-gear"></i><% end %>
</div>

<h3>New book</h3>
  <%= form_with model: @book_new do |f| %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Opinion</h5>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>

<h3>Book detail</h3>
<div class="d-flex">
  <p><%= link_to user_path(@user.id) do %><%= image_tag @book.user.get_profile_image(100,100) %><br>
  <%= @user.name %><% end %></p>
  <p><%= link_to @book.title, book_path(@book.id) %></p>
  <p><%= @book.body %></p>
  
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>