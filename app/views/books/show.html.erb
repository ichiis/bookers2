<div class="container mb-5">
  <div class="row">
    <div class="col-md-3">
      <div class="p-3">
      <h2>User info</h2>
         <%= image_tag @user.get_profile_image(100, 100) %>
         <p class="mt-2"><b>name <%= @user.name %></b></p>
         <p><b>introduction <%= @user.introduction %></b></p>
          <%= link_to edit_user_path(current_user.id), class:'btn btn-outline-secondary btn-block' do %><i class="fa-solid fa-user-gear"></i><% end %>
      
      <h3>New book</h3>
        <%= form_with model: @book_new do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title %>
        <h5>Opinion</h5>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book', class:'btn btn-success my-2' %>
        <% end %>
        </div>
    </div>

    <div class="col-md-8 ofset-1">
      <div class="p-3">
      <h3>Book detail</h3>
       <div class="d-flex">
         <p><%= link_to user_path(@user.id) do %><%= image_tag @book.user.get_profile_image(100,100) %><br>
         <%= @user.name %><% end %></p>
         <p><%= link_to @book.title, book_path(@book.id) %></p>
         <p><%= @book.body %></p>
  
         <% if @book.user == current_user %>
         <%= link_to "Edit", edit_book_path(@book.id) %>
         <%= link_to "Destroy", book_path(@book), method: :delete %>
         <% end %>
         </div
       </div>
    </div>
  </div>
</div>