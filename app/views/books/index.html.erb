<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj form being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="pl-3">
        <!--user info, new book-->
      <%= render 'users/info', user: @user %>     
      <%= render 'form', book_new: @book_new %>     
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table-hover w-100">
          <thead>
            <tr class="border-top">
              <th></th>
              <th class=" py-3">Title</th>
              <th class=" py-3">Opinion</th>
            </tr>
          </thead>
         <% @books.each do |book| %>
          <tbody>
            <tr class="border-top">
              <td class=" py-2 w-25"><%= link_to user_path(book.user_id) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
              <td class=" align-top pt-2"><%= link_to book.title, book_path(book.id) %></td>
              <td class=" align-top pt-2"><%= book.body %></td>
            </tr>
         <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>