<h3>New book</h3>
  <%= form_with model: @book do |f| %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Opinion</h5>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
   <p>Title
   <%= link_to book_path(book.id) do %>
    <%= book.title %>
   <% end %>
   </p>
  <p>Opinion<%= book.body %></p>
</div>
<% end %>