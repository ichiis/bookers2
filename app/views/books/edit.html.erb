<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
<p>Title</p>
  <%= f.text_field :title %>
<p>Opinion</p>
  <%= f.text_area :body %><br>
  <%= f.submit "Update User" %>
<% end %>

<div class="d-flex">
  <p><%= link_to "Show", book_path(@book.id) %></p>
  <p>|</p>
  <p><%= link_to "Back", books_path %></p>
</div>