
<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>
  <%= link_to edit_user_path do %><i class="fa-solid fa-user-gear"></i><% end %>
</div>

<h2>New book</h2>
<%= form_with model: @book_new do |f| %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Opinion</h5>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= link_to user_path(@user.id) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>