<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="pl-3">
        <!--user info, new book-->
        <%= render 'info', user: @user %>     
        <%= render 'books/form', book_new: @book_new %>     
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table-hover w-100">
          <thead>
            <tr class="border-top">
              <th></th>
              <th class=" py-3">Title</th>
              <th class=" py-3">Opinion</th>
            </tr>
          </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr class="border-top">
              <td class=" py-2 w-25"><%= link_to user_path(@user.id) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
              <td class=" py-2 w-25"><%= link_to book.title, book_path(book.id) %></td>
              <td class=" py-2 w-25"><%= book.body %></td>
            </tr>
        <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>