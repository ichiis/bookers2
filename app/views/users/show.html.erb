<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>
  <%= link_to edit_user_path(current_user.id) do %><i class="fa-solid fa-user-gear"></i><% end %>
</div>

