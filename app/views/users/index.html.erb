<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="pl-3">
        <!--user info, new book-->
      <%= render 'info', user: @user %>     
      <%= render 'books/form', book_new: @book_new %>     
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table-hover w-100">
          <thead>
            <tr class="border-top">
              <th class=" py-3">image</th>
              <th class=" py-3">name</th>
              <th></th>
           </tr>
         </thead>
        <% @users.each do |user| %>
         <tbody>
           <tr class="border-top">
             <td class=" py-2 w-25"><%= image_tag user.get_profile_image(100,100) %></td>
             <td class=" align-top pt-2"><%= user.name %></td>
             <td class=" align-top pt-2"><%= link_to "Show", user_path(user.id) %></td>
           </tr>
        <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>