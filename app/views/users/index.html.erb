<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>
  <%= link_to edit_user_path(current_user.id) do %><i class="fa-solid fa-user-gear"></i><% end %>
</div>

<h3>New book</h3>
  <%= form_with model: @book_new do |f| %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Opinion</h5>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>